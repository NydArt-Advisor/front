# Frontend Service Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===== NEXT.JS CONFIGURATION =====
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===== BACKEND SERVICE URLs =====

# Service URLs (must start with NEXT_PUBLIC_ for client-side access)
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:5002
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:3004
NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:4004
NEXT_PUBLIC_NOTIFICATION_SERVICE_URL=http://localhost:4003
NEXT_PUBLIC_DB_SERVICE_URL=http://localhost:5001
NEXT_PUBLIC_METRICS_SERVICE_URL=http://localhost:5005

# ===== PAYMENT CONFIGURATION =====

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# PayPal Configuration
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_SECRET=your_paypal_secret_here
PAYPAL_MODE=sandbox

# ===== AUTHENTICATION CONFIGURATION =====

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# ===== FEATURE FLAGS =====

# Feature Toggles (must start with NEXT_PUBLIC_ for client-side access)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true
NEXT_PUBLIC_ENABLE_INTERNATIONALIZATION=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ===== ANALYTICS CONFIGURATION =====

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# ===== NOTIFICATION CONFIGURATION =====

# Email Configuration
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=NydArt Advisor

# SMS Configuration
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS=true
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===== IMAGE PROCESSING =====

# Image Upload Configuration
NEXT_PUBLIC_MAX_IMAGE_SIZE_MB=10
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
NEXT_PUBLIC_IMAGE_UPLOAD_URL=https://your-image-upload-service.com

# ===== PERFORMANCE CONFIGURATION =====

# Caching Configuration
NEXT_PUBLIC_CACHE_DURATION_SECONDS=3600
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# API Configuration
NEXT_PUBLIC_API_TIMEOUT_MS=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY_MS=1000

# ===== SECURITY CONFIGURATION =====

# CORS Configuration
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
NEXT_PUBLIC_ENABLE_HTTPS_REDIRECT=true

# Content Security Policy
NEXT_PUBLIC_CSP_NONCE=your_csp_nonce_here
NEXT_PUBLIC_ENABLE_CSP=true

# ===== INTERNATIONALIZATION =====

# i18n Configuration
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,fr,es,de
NEXT_PUBLIC_LOCALE_DETECTION=true

# ===== ACCESSIBILITY CONFIGURATION =====

# Accessibility Features
NEXT_PUBLIC_ENABLE_HIGH_CONTRAST=true
NEXT_PUBLIC_ENABLE_REDUCED_MOTION=true
NEXT_PUBLIC_ENABLE_FOCUS_INDICATORS=true
NEXT_PUBLIC_ENABLE_SCREEN_READER_SUPPORT=true

# ===== DEVELOPMENT OVERRIDES =====
# Uncomment for development/testing
# NEXT_PUBLIC_MOCK_API=true
# NEXT_PUBLIC_DEBUG_MODE=true
# NEXT_PUBLIC_LOG_LEVEL=debug

# ===== PRODUCTION OVERRIDES =====
# Uncomment and set for production
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NEXT_PUBLIC_ENABLE_HTTPS_REDIRECT=true

# ===== TESTING OVERRIDES =====
# Uncomment for testing environment
# NODE_ENV=test
# NEXT_PUBLIC_TEST_MODE=true
# NEXT_PUBLIC_MOCK_SERVICES=true

# ===== ERROR MONITORING =====

# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# LogRocket Configuration
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id

# ===== CDN CONFIGURATION =====

# CDN URLs
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
NEXT_PUBLIC_STATIC_URL=https://static.yourdomain.com
NEXT_PUBLIC_MEDIA_URL=https://media.yourdomain.com

# ===== SEO CONFIGURATION =====

# SEO Settings
NEXT_PUBLIC_SITE_NAME=NydArt Advisor
NEXT_PUBLIC_SITE_DESCRIPTION=AI-powered art analysis and recommendations
NEXT_PUBLIC_SITE_KEYWORDS=art,ai,analysis,recommendations,artwork
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@nydartadvisor
NEXT_PUBLIC_FACEBOOK_PAGE=https://facebook.com/nydartadvisor
NEXT_PUBLIC_INSTAGRAM_HANDLE=@nydartadvisor

# ===== THIRD-PARTY INTEGRATIONS =====

# Google Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_GOOGLE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
GOOGLE_RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Social Login
NEXT_PUBLIC_ENABLE_GOOGLE_LOGIN=true
NEXT_PUBLIC_ENABLE_FACEBOOK_LOGIN=true
NEXT_PUBLIC_ENABLE_GITHUB_LOGIN=false
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ===== CUSTOMIZATION =====

# Brand Configuration
NEXT_PUBLIC_BRAND_NAME=NydArt Advisor
NEXT_PUBLIC_BRAND_LOGO_URL=https://yourdomain.com/logo.png
NEXT_PUBLIC_BRAND_COLOR_PRIMARY=#FF6B6B
NEXT_PUBLIC_BRAND_COLOR_SECONDARY=#FF8E8E

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_CONTACT_PHONE=+1234567890
NEXT_PUBLIC_SUPPORT_URL=https://support.yourdomain.com

# ===== DEBUGGING =====

# Debug Configuration
NEXT_PUBLIC_DEBUG_API_CALLS=false
NEXT_PUBLIC_DEBUG_REDUX=false
NEXT_PUBLIC_DEBUG_PERFORMANCE=false
NEXT_PUBLIC_DEBUG_ACCESSIBILITY=false

# ===== EXPERIMENTAL FEATURES =====

# Experimental Features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_A_B_TESTING=false

# ===== MAINTENANCE =====

# Maintenance Mode
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE=We're currently performing maintenance. Please check back soon.
